# PostgreSQL
POSTGRES_PASSWORD=changeme

# Domain (used for sitemap/robots.txt and Caddy HTTPS)
DOMAIN=bbscope.com

# Poll interval in hours (0 to disable)
POLL_INTERVAL=1

# HackerOne
H1_USERNAME=
H1_TOKEN=

# Bugcrowd (either set credentials OR set BC_PUBLIC_ONLY=1 for public programs only)
BC_EMAIL=
BC_PASSWORD=
BC_OTP=
BC_PUBLIC_ONLY=

# Intigriti
IT_TOKEN=

# YesWeHack
YWH_EMAIL=
YWH_PASSWORD=
YWH_OTP=

# AI normalization (optional)
# When set, the poller will use AI to normalize/clean scope targets
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Cloudflare (optional, only needed with docker-compose.override.yml)
# Create a token at https://dash.cloudflare.com/profile/api-tokens
# with Zone:DNS:Edit permission for your domain
CF_API_TOKEN=
